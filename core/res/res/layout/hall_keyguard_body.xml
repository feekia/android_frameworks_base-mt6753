<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
  
    <TextView android:id="@+id/hall_keyguard_date" android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="0.2" android:gravity="center" android:textSize="18sp" 
        android:shadowColor="@android:color/black" android:shadowDy="2" android:shadowDx="1"
        android:shadowRadius="1" android:textColor="@android:color/white" 
		android:visibility="gone"
        />

     <TextClock android:id="@+id/hall_keyguard_time" android:layout_width="match_parent" android:layout_height="0sp"
    	android:layout_weight="0.8" android:format12Hour="@string/hk_time_12_hours_format" android:fontFamily="sans-serif-thin"
    	android:textColor="@android:color/white" android:lineSpacingMultiplier="1.4"
    	android:format24Hour="@string/hk_time_24_hours_format" android:gravity="center" android:shadowColor="@android:color/black" 
    	android:shadowDy="4" android:shadowDx="2" android:shadowRadius="1" />
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:paddingTop="10dp"
        android:layout_weight="0.2" android:orientation="horizontal" android:layout_gravity="center_horizontal"
        android:id="@+id/hall_keyguard_notify_icons" android:gravity="center_horizontal">
        <TextView android:id="@+id/hall_keyguard_sms" android:layout_width="wrap_content" android:visibility="invisible"
            android:layout_height="wrap_content" android:drawableLeft="@drawable/sym_action_email" android:shadowColor="@android:color/black" 
            android:shadowDy="2" android:shadowDx="1" android:shadowRadius="1" android:textColor="@android:color/white"
            android:paddingLeft="10dp" android:paddingRight="10dp" android:drawablePadding="8dp" android:gravity="center" android:textSize="18dp"/>
        
        <TextView android:id="@+id/hall_keyguard_miss_call" android:layout_width="wrap_content" android:visibility="invisible"
            android:layout_height="wrap_content" android:drawableLeft="@drawable/sym_call_missed" android:shadowColor="@android:color/black" 
            android:shadowDy="2" android:shadowDx="1" android:shadowRadius="1" android:textColor="@android:color/white"
            android:paddingLeft="10dp" android:paddingRight="10dp" android:drawablePadding="8dp" android:gravity="center" android:textSize="18dp"/>
    </LinearLayout>
    
</merge>